{
    "name": "creativefuse/project-loader",
    "description": "Project dependency installer",
    "license": "proprietary",
    "authors": [
      {
          "name": "CreativeFuse",
          "email": "support@creativefuse.org"
      }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "~1.0",
        "creativefuse/fuse": "dev-master",
        "creativefuse/__config": "dev-master",
        "creativefuse/_Reactor": "dev-master"
      },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/CreativeFuse/cf.mu.config.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/CreativeFuse/cf.mu.tracer.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/CreativeFuse/cf.mu.Reactor.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/CreativeFuse/cf.theme.fuse.git"
        }
    ],
    "require-dev": {
      "johnbillion/query-monitor": "~3.0",
      "creativefuse/__tracer": "dev-master"
    },
    "extra": {

        "installer-paths" : {
             "mu-plugins/{$name}/" : ["type:wordpress-muplugin"],
             "themes/{$name}/" : ["type:wordpress-theme"],
             "plugins/{$name}/" : ["type:wordpress-plugin"]
        }
    },
    "config": {

      "vendor-dir": "mu-plugins/__vendor"

    }
}